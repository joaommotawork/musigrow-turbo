{
	"extends": "tsconfig/nextjs.json",
	"compilerOptions": {
		"jsx": "preserve",
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node", "jest"],
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@public/*": ["public/*"],
			"@specs/*": ["specs/*"],
			"@hooks/*": ["hooks/*"],
			"@types/*": ["types/*"],
			"@utils/*": ["utils/*"],
			"@constants/*": ["constants/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts"],
	"exclude": ["node_modules"],
  "paths": {
		"@components/*": ["components/*"],
		"@pages/*": ["pages/*"],
		"@public/*": ["public/*"],
		"@specs/*": ["specs/*"],
		"@hooks/*": ["hooks/*"],
		"@types/*": ["types/*"],
		"@utils/*": ["utils/*"],
		"@constants/*": ["constants/*"]
	}
}
